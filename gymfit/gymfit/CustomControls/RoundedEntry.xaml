<Frame xmlns="http://xamarin.com/schemas/2014/forms"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:d="http://xamarin.com/schemas/2014/forms/design"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymFit.Effects"
        mc:Ignorable="d"
       x:Name="border"
        x:Class="GymFit.CustomControls.RoundedEntry" CornerRadius="10" Margin="0, 10, 0, 10" Padding="0">
    <Frame 
         CornerRadius="10" Padding="10, 0, 10, 0" BackgroundColor="#96000000" x:Name="innerFrame">
    
        <Entry x:Name="entry" HeightRequest="50"  TextColor="White" PlaceholderColor="Black" FontSize="15" BackgroundColor="Transparent" TextChanged="entry_TextChanged" Focused="Entry_Focused" Unfocused="entry_Unfocused">
            <Entry.Effects>
                <!--Quita los bordes en UWP y la linea de subrayado de Xamarin.Droid-->
                <local:EntryWithoutLineEffect></local:EntryWithoutLineEffect>
            </Entry.Effects>
        </Entry>
    </Frame>
</Frame>